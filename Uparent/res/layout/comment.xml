<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backhuise"
    android:orientation="vertical" >
	<FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topbarheigth"
        android:background="@color/topbar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bartitle"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/toptitle" />

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:text="返回"
            android:textColor="@android:color/white"
            android:background="@drawable/back"
             android:drawableLeft="@drawable/backimg"
            android:textSize="14sp" />
		<TextView
            android:id="@+id/selectclass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/back"
            android:textSize="14sp" />

    </FrameLayout>

	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:padding="5dp"
	        >
	        <ImageView 
	            android:layout_width="match_parent"
	            android:layout_height="30dp"
	            android:src="@drawable/head_img"
	            android:scaleType="fitXY"
	            />
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@color/white"
	            android:orientation="horizontal"
	            >

	            <TextView
	                android:id="@+id/childname"
	                android:layout_width="100dp"
	                style="@style/myedittextstyle14"
	                android:layout_height="30dp"
	                android:layout_weight="1"
	                android:textColor="@color/blue" />
	            <TextView
	                android:id="@+id/classname"
	                android:layout_width="100dp"
	                style="@style/myedittextstyle14"
	                android:layout_height="30dp"
	                android:layout_weight="1"
	                android:textColor="@color/blue" />
	            
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@color/white"
	            android:orientation="horizontal"
	            >

	            <TextView
	                android:id="@+id/time"
	                style="@style/myedittextstyle14"
	                android:layout_width="100dp"
	                android:layout_height="30dp"
	                android:layout_weight="1"
	                android:textColor="@color/blue" />
	            <TextView
	                android:id="@+id/name"
	                style="@style/myedittextstyle14"
	                android:layout_width="100dp"
	                android:layout_height="30dp"
	                android:layout_weight="1"
	                android:textColor="@color/blue" />


	        </LinearLayout>
	        
			<ListView 
			   	android:id="@+id/listview"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:scrollbars="@null"
			    android:divider="@color/backhuise"
			    android:dividerHeight="1px"
			    ></ListView>
	        <TextView
	            android:id="@+id/save"
	            android:layout_width="match_parent"
	            android:layout_height="45dp"
	            android:layout_marginTop="50dp"
	            android:background="@drawable/orangebt"
	            android:gravity="center"
	            android:text="确定"
	            android:textColor="@color/white"
	            android:textSize="@dimen/bttext" />

	    </LinearLayout>
	    


	
</LinearLayout>