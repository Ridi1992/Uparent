<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backhuise"
    android:orientation="vertical" >
     <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topbarheigth"
        android:background="@color/topbar"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="找回密码"
            android:textColor="@android:color/white"
            android:textSize="@dimen/toptitle" />

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@drawable/back"
            android:drawableLeft="@drawable/backimg"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/zhuce"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/back"
           android:text="注册"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </FrameLayout>

        <LinearLayout
            android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
       android:background="@drawable/baisebaijing"
        android:gravity="center_vertical">
		<TextView 
		    android:background="@drawable/editback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/edittext"
            android:textSize="@dimen/text_16" 
            android:gravity="center_vertical"
		    android:text="手机号"
		    />
		<EditText 
		    android:id="@+id/mPhoneNum"
         	android:background="@drawable/editback"
        	android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/edittext"
            android:textSize="@dimen/text_16" 
            android:gravity="center_vertical"
		    />
    </LinearLayout>

    <LinearLayout
         android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
     	 android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp"
          android:paddingLeft="10dp"
         android:paddingRight="10dp"
       android:background="@drawable/baisebaijing"
        android:gravity="center_vertical"
        >

		<TextView
		    android:text="验证码："
		    android:background="@drawable/editback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/edittext"
            android:textSize="@dimen/text_16" 
            android:gravity="center_vertical"/>

		<EditText
		    android:id="@+id/code"
		    android:minWidth="120dp"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_gravity="center_vertical"
		    android:background="@null"
		    android:gravity="center_vertical"
		    android:paddingLeft="@dimen/m10dp"
		    android:singleLine="true"
		    android:textColor="@color/edittext"
		    android:textSize="@dimen/text_16" />

		<TextView
		    android:layout_weight="1"
		    android:id="@+id/getcode"
		    android:layout_width="100dp"
		    android:layout_height="40dp"
		    android:background="@drawable/orangebt"
		    android:gravity="center"
		    android:text="获取验证码"
		    android:textColor="@color/white"
		    android:textSize="@dimen/text_14" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp"
          android:paddingLeft="10dp"
         android:paddingRight="10dp"
       android:background="@drawable/baisebaijing"
        android:gravity="center_vertical"
         >

		<TextView
		    android:background="@drawable/editback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/edittext"
            android:textSize="@dimen/text_16" 
            android:gravity="center_vertical"
		    android:text="输入新密码" />

		<EditText
		    android:id="@+id/register_password"
		     android:layout_marginRight="@dimen/m10dp"
		    android:layout_weight="1"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_gravity="center_vertical"
		    android:background="@null"
		    android:gravity="center_vertical"
		    android:paddingLeft="@dimen/m10dp"
		    android:password="true"
		    android:singleLine="true"
		    android:textColor="@color/edittext"
		    android:textSize="@dimen/text_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp"
          android:paddingLeft="10dp"
         android:paddingRight="10dp"
       android:background="@drawable/baisebaijing"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:text="确认新密码"
            android:background="@drawable/editback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/edittext"
            android:textSize="@dimen/text_16" 
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/register_password2"
            android:minWidth="200dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/m10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/m10dp"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/edittext"
            android:textSize="@dimen/text_16" />
    </LinearLayout>
    <TextView
	    android:id="@+id/makesure"
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="50dp"
	    android:background="@drawable/orangebt"
	    android:gravity="center"
	    android:text="确认"
	    android:textColor="@color/white"
	    android:textSize="@dimen/bttext" />
</LinearLayout>
