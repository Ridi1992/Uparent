<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backhuise"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topbarheigth"
        android:background="@color/topbar"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="@dimen/toptitle" />

        <TextView
            android:visibility="gone"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@drawable/back"
            android:drawableLeft="@drawable/backimg"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/zhuce"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/back"
           android:text="注册"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </FrameLayout>
	
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/backhuise" 
        />
    <LinearLayout 
        android:layout_marginTop="20dp"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:layout_marginLeft="10dp"
	    android:paddingRight="10dp"
	    android:layout_marginRight="10dp"
	    android:background="@drawable/baisebaijing"
	    >

	    <ImageView
	        android:padding="10dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:src="@drawable/u24"/>

	    <EditText
	        	android:id="@+id/name"
	        	android:phoneNumber="true"
	         	android:background="@drawable/editback"
	        	android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/edittext"
                android:textSize="@dimen/text_16" 
                android:gravity="center_vertical"/>
	</LinearLayout>
	<View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/backhuise" 
        />
	   <LinearLayout
	     android:background="@drawable/baisebaijing"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal"
	     android:gravity="center_vertical"
	     android:layout_marginLeft="10dp"
	    android:paddingRight="10dp"
        android:layout_marginRight="10dp"
	    >

	     <ImageView
	         android:padding="10dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:src="@drawable/u28"/>

	    <EditText
	        	android:id="@+id/password"
	        	android:password="true"
	         	android:background="@drawable/editback"
	        	android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/edittext"
                android:textSize="@dimen/text_16" 
                android:gravity="center_vertical"/>
	</LinearLayout>

	   <TextView 
	       android:id="@+id/getpassword"
	       android:layout_marginTop="20dp"
	       android:gravity="center"
	       android:layout_width="match_parent"
	       android:layout_height="30dp"
	       android:text="—————忘记密码—————"
	       android:textColor="@color/huise"
	       />
	<View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/backhuise" 
        />
	
	<TextView
	    android:id="@+id/ok"
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="50dp"
	    android:background="@drawable/orangebt"
	    android:gravity="center"
	    android:text="登录"
	    android:textColor="@color/white"
	    android:textSize="@dimen/bttext" />
	
</LinearLayout>
