<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:charlie="http://schemas.android.com/apk/res/com.lester.uparent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backhuise"
    android:orientation="vertical" >
	<FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topbarheigth"
        android:background="@color/topbar"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/toptitle" />

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:text="返回"
            android:textColor="@android:color/white"
            android:background="@drawable/back"
             android:drawableLeft="@drawable/backimg"
            android:textSize="14sp" />
    </FrameLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 	android:background="@drawable/baisebaijing"
    android:orientation="vertical"
    android:layout_margin="10dp"
     >

    <LinearLayout
  
        android:id="@+id/ll_cotentview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
         >
		<LinearLayout
        android:id="@+id/cotentview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
         >
         <com.lester.headview.CustomImageView
	          android:id="@+id/childhead"
	          android:layout_margin="2dp"
	          android:layout_width="@dimen/middleheadwidth"
	          android:layout_height="@dimen/middleheadheight"
	          android:layout_centerHorizontal="true"
	          android:layout_centerVertical="true"
	          android:layout_gravity="center_vertical|center_horizontal"
	          charlie:src="@drawable/u122"
	          charlie:type="circle" />
         <LinearLayout 
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:layout_weight="1"
             >
             <LinearLayout 
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:orientation="horizontal"
                 android:gravity="bottom"
                 android:layout_marginBottom="2dp"
                 >
                 <TextView 
                     android:id="@+id/childname"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:textColor="@color/itemtext"
                     android:textSize="@dimen/text_16"
                     android:gravity="center_vertical"
                     />
                 <ImageView 
                android:id="@+id/sex"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                />
             </LinearLayout>
         </LinearLayout>
        </LinearLayout>
        </LinearLayout>
 </LinearLayout>
    
    <ImageView 
        android:id="@+id/iv_qr_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"/>

</LinearLayout>