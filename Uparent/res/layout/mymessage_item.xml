<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:charlie="http://schemas.android.com/apk/res/com.lester.uteacher"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
     >

    <LinearLayout
        android:id="@+id/ll_cotentview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
    	android:background="@drawable/massageitemback"
        android:orientation="horizontal"
        android:gravity="center_vertical"
         >
         <FrameLayout 
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             >
		<LinearLayout
        android:id="@+id/cotentview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        
         >
<!--          <ImageView -->
<!-- 	          android:id="@+id/head" -->
<!-- 	          android:layout_marginRight="5dp" -->
<!-- 	          android:layout_width="@dimen/middleheadwidth" -->
<!-- 	          android:layout_height="@dimen/middleheadheight" -->
<!-- 	          android:layout_centerHorizontal="true" -->
<!-- 	          android:layout_centerVertical="true" -->
<!-- 	          android:src="@drawable/ic_launcher" /> -->
         <LinearLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:gravity="center_vertical"
			android:layout_weight="1"
             >
             <LinearLayout 
                 android:visibility="gone"
                 android:layout_width="wrap_content"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:orientation="horizontal"
                 android:gravity="center_vertical"
                 android:layout_marginTop="2dp"
                 >
                 <TextView 
                     android:id="@+id/title"
                     android:singleLine="true"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/itemtext"
                     android:textSize="@dimen/text_16"
                     android:gravity="center_vertical"
                     android:ellipsize="end"
                     />
             </LinearLayout>
             <LinearLayout 
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:gravity="center_vertical"
                 android:orientation="horizontal"
                 >
                 <TextView 
                     android:id="@+id/content"
                     android:layout_weight="1"
                     android:lines="2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="#000000"
                     android:textSize="@dimen/text_14"
                     android:gravity="center_vertical"
                     android:layout_marginRight="20dp"
                     />
                 
             	</LinearLayout>
             	<TextView
                     android:id="@+id/release_time"
		            android:layout_width="match_parent"
		            android:layout_marginRight="10dp"
                     android:layout_height="wrap_content"
                     android:textColor="#000000"
                     android:textSize="@dimen/text_14"
                     android:gravity="center_vertical|right"/>
         </LinearLayout>
        </LinearLayout>
        <TextView 
            android:id="@+id/log"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            />
		
        </FrameLayout>
        </LinearLayout>
 </LinearLayout>
