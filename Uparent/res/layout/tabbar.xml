<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/backhuise"
        />

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal"
	    >
	    <LinearLayout 
	        android:id="@+id/bar0"
	        android:layout_weight="1"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:gravity="center"
	        >
	        <ImageView 
	            android:id="@+id/bar_img0"
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            android:padding="5dp"
	            android:scaleType="centerInside"
	            />
	        <TextView 
	            android:id="@+id/bar_text0"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="首页"
	            android:gravity="center"
	            android:textSize="10sp"
	            />
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/bar1"
	        android:layout_weight="1"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:gravity="center"
	        >
	        <ImageView 
	            android:id="@+id/bar_img1"
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            android:padding="5dp"
	            android:scaleType="centerInside"
	           
	            />

	        <TextView
	            android:id="@+id/bar_text1"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="基础"
	            android:textSize="10sp" />

	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/bar2"
	        android:layout_weight="1"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:gravity="center"
	        >
	        <ImageView 
	            android:id="@+id/bar_img2"
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            android:padding="5dp"
	            android:scaleType="centerInside"
	           
	            />

	        <TextView
	            android:id="@+id/bar_text2"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="扩展"
	            android:textSize="10sp" />

	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/bar3"
	        android:layout_weight="1"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:gravity="center"
	        >
	        <ImageView 
	            android:id="@+id/bar_img3"
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            android:padding="5dp"
	            android:scaleType="centerInside"
	           
	            />

	        <TextView
	            android:id="@+id/bar_text3"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="设置"
	            android:textSize="10sp" />

	    </LinearLayout>
	    
	</LinearLayout>
</LinearLayout>