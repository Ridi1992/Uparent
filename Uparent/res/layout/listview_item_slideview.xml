<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:charlie="http://schemas.android.com/apk/res/com.lester.uparent"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
     >

    <LinearLayout
        android:id="@+id/ll_cotentview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
    	android:background="@drawable/massageitemback"
        android:orientation="horizontal"
         >
		<LinearLayout
        android:id="@+id/cotentview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
         >
         <com.lester.headview.CustomImageView
	          android:id="@+id/head"
	          android:layout_margin="2dp"
	          android:layout_width="@dimen/middleheadwidth"
	          android:layout_height="@dimen/middleheadheight"
	          android:layout_centerHorizontal="true"
	          android:layout_centerVertical="true"
	          android:layout_gravity="center_vertical|center_horizontal"
	          android:src="@drawable/parent"
	          charlie:type="circle" />
         <LinearLayout 
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical"
			android:layout_weight="1"
             >
             <LinearLayout 
                 android:layout_width="wrap_content"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:orientation="horizontal"
                 android:layout_marginBottom="2dp"
                 android:gravity="center_vertical"
                 >
                 <TextView 
                     android:id="@+id/name"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/itemtext"
                     android:textSize="@dimen/text_16"
                     android:gravity="center_vertical"
                     />
             </LinearLayout>
             
         </LinearLayout>

        <TextView
            android:id="@+id/info"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/ischeshang"
            android:gravity="center"
            android:textColor="@color/white" />

        </LinearLayout>
		<TextView
            android:id="@+id/bt"
            android:layout_marginRight="-60dp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/chengse"
            android:text="删除" />
        </LinearLayout>
 </LinearLayout>
