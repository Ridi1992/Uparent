<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:charlie="http://schemas.android.com/apk/res/com.lester.uparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/backhuise"
        >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whiteback"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:orientation="vertical"
        >
          <com.lester.headview.CustomImageView
	          android:id="@+id/head"
	          android:layout_width="@dimen/bigheadwidth"
	          android:layout_height="@dimen/bigheadheight"
	          android:layout_centerHorizontal="true"
	          android:layout_centerVertical="true"
	          android:layout_gravity="center_vertical|center_horizontal"
	          charlie:src="@drawable/u122"
	          charlie:type="circle" />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/name"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14" />

             <ImageView 
                android:id="@+id/sex"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/nv"
                />
        </LinearLayout>
        <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center"
        >

        <TextView
            android:id="@+id/call"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/orangebt"
            android:gravity="center"
            android:text="打电话"
            android:textColor="@color/white" />

        <!-- <TextView
            android:id="@+id/sendmessage"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/orangebt"
            android:gravity="center"
            android:text="发私信"
            android:textColor="@color/white" 
            android:layout_marginLeft="5dp"/> -->
    		</LinearLayout>
    	</LinearLayout>
	</LinearLayout>
</LinearLayout>
