<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:charlie="http://schemas.android.com/apk/res/com.lester.uparent"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity" >
	 <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topbarheigth"
        android:background="@color/topbar"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/bartitle"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="个人信息"
            android:textColor="@android:color/white"
            android:textSize="@dimen/toptitle" />
        <TextView
            android:id="@+id/backkk"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:text="返回"
            android:textColor="@android:color/white"
            android:background="@drawable/back"
             android:drawableLeft="@drawable/backimg"
            android:textSize="14sp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/selectclass"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:text="选择班级"
            android:textColor="@android:color/white"
            android:background="@drawable/back"
            android:textSize="14sp" />
    </FrameLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whiteback"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:orientation="vertical"
        >
          <com.lester.headview.CustomImageView
	          android:id="@+id/head"
	          android:layout_width="@dimen/bigheadwidth"
	          android:layout_height="@dimen/bigheadheight"
	          android:layout_centerHorizontal="true"
	          android:layout_centerVertical="true"
	          android:layout_gravity="center_vertical|center_horizontal"
	          charlie:src="@drawable/u122"
	          charlie:type="circle" />
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:orientation="vertical"
              >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="5dp"
            >
            <TextView 
                android:id="@+id/name"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14"
                android:gravity="center_horizontal"
                />
             <ImageView 
                android:id="@+id/sex"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />
             <TextView 
                 android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14"
                android:text="陕西西安"
                 android:layout_weight="1"
                />
              <TextView 
                  android:visibility="gone"
                  android:id="@+id/nation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14"
                android:text=""
                 android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:gravity="center_horizontal"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14" />

             <TextView
                 android:id="@+id/mobile_phone"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:textColor="@color/itemtext"
                 android:textSize="@dimen/text_13" />

        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="身份证号"
                 android:gravity="center_horizontal"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14" />

             <TextView
                 android:id="@+id/id_card"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:textColor="@color/itemtext"
                 android:textSize="@dimen/text_13" />

        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="电话"
                 android:gravity="center_horizontal"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14" />

             <TextView
                 android:id="@+id/telephone"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:textColor="@color/itemtext"
                 android:textSize="@dimen/text_13" />

        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="工作单位"
                 android:gravity="center_horizontal"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14" />

             <TextView
                 android:id="@+id/company"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:textColor="@color/itemtext"
                 android:textSize="@dimen/text_13" />

        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="备注"
                 android:gravity="center_horizontal"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14" />

             <TextView
                 android:id="@+id/des"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:textColor="@color/itemtext"
                 android:textSize="@dimen/text_13" />
			</LinearLayout>
        </LinearLayout>
    </LinearLayout>
        
        
    </LinearLayout>
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       
        >
        <TextView 
       android:id="@+id/changepassword"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:background="@drawable/orangebt"
        android:text="修改密码"
        android:textSize="@dimen/bttext"
        android:gravity="center"
        />


        <TextView 
            android:id="@+id/logoff"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:background="@drawable/orangebt"
        android:text="注销登录"
        android:textSize="@dimen/bttext"
        android:gravity="center"
        />
        
    </LinearLayout>
</LinearLayout>
