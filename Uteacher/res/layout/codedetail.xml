<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:charlie="http://schemas.android.com/apk/res/com.lester.uteacher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backhuise"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topbarheigth"
        android:background="@color/topbar"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/bartitle"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/toptitle" />
        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:text="返回"
            android:textColor="@android:color/white"
            android:background="@drawable/back"
             android:drawableLeft="@drawable/backimg"
            android:textSize="14sp" />
    </FrameLayout>
	<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whiteback"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:orientation="vertical"
        >
          <com.lester.headview.CustomImageView
	          android:id="@+id/childhead"
	          android:layout_width="@dimen/bigheadwidth"
	          android:layout_height="@dimen/bigheadheight"
	          android:layout_centerHorizontal="true"
	          android:layout_centerVertical="true"
	          android:layout_gravity="center_vertical|center_horizontal"
	          charlie:src="@drawable/u122"
	          charlie:type="circle" />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <TextView 
                android:id="@+id/childname"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14"
                />
             <ImageView 
                android:id="@+id/childsex"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />
             <TextView 
                 android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14"
                android:text="陕西西安"
                 android:layout_weight="1"
                />
              <TextView 
                  android:id="@+id/studentClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14"
                android:text=""
                 android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14" />

             <TextView
                 android:id="@+id/studentIdCard"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:textColor="@color/itemtext"
                 android:textSize="@dimen/text_13" />

        </LinearLayout>
        <LinearLayout 
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="家庭住址"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14" />

             <TextView
                 android:id="@+id/address"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="陕西省西安市太白小区"
                 android:textColor="@color/itemtext"
                 android:textSize="@dimen/text_13" />

        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/agent" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whiteback"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:orientation="vertical"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="家长姓名"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14" />

             <TextView
                 android:id="@+id/parentname"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:textColor="@color/itemtext"
                 android:textSize="@dimen/text_13" />

        </LinearLayout>
        <LinearLayout 
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="与孩子关系"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="腐女"
                 android:textColor="@color/itemtext"
                 android:textSize="@dimen/text_13" />

        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="代理人姓名"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14" />

             <TextView
                 android:id="@+id/agentName"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="杨姐"
                 android:textColor="@color/itemtext"
                 android:textSize="@dimen/text_13" />

        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="代理人身份证号"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14" />

             <TextView
                 android:id="@+id/agentIdCard"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:textColor="@color/itemtext"
                 android:textSize="@dimen/text_13" />

        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="代理人电话"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14" />

             <TextView
                 android:id="@+id/agentPhone"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="133330413245"
                 android:textColor="@color/itemtext"
                 android:textSize="@dimen/text_13" />

        </LinearLayout>
        <LinearLayout 
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="预计接送时间"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="2015"
                 android:textColor="@color/itemtext"
                 android:textSize="@dimen/text_13" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:visibility="gone"
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whiteback"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:orientation="vertical"
        >
    	    <com.lester.headview.CustomImageView
	          android:id="@+id/parenthead"
	          android:layout_width="@dimen/bigheadwidth"
	          android:layout_height="@dimen/bigheadheight"
	          android:layout_centerHorizontal="true"
	          android:layout_centerVertical="true"
	          android:layout_gravity="center_vertical|center_horizontal"
	          charlie:src="@drawable/u122"
	          charlie:type="circle" />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <TextView 
                android:id="@+id/parentname1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14"
                android:text="家长name"
                />
            <ImageView 
                android:id="@+id/gridsex"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                 android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

              <TextView
                  android:visibility="gone"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="腐女"
                  android:textColor="@color/itemtext"
                  android:textSize="@dimen/text_14" />

        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14" />

             <TextView
                 android:id="@+id/parentcardid"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:textColor="@color/itemtext"
                 android:textSize="@dimen/text_13" />

        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textColor="@color/itemtext"
                android:textSize="@dimen/text_14" />

             <TextView
                 android:id="@+id/parentphone"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text=""
                 android:textColor="@color/itemtext"
                 android:textSize="@dimen/text_13" />

        </LinearLayout>
    </LinearLayout>
    
    <TextView 
        android:id="@+id/makesure"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="@color/white"
        android:background="@drawable/orangebt"
        android:text="确认无误"
        android:textSize="@dimen/bttext"
        android:gravity="center"
        />
    </LinearLayout>
    
</ScrollView>
</LinearLayout>
