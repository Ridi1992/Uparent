<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:charlie="http://schemas.android.com/apk/res/com.lester.uteacher"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:orientation="vertical"
     >

    <LinearLayout
        android:id="@+id/ll_cotentview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
    	android:background="@color/white"
        android:orientation="horizontal"
         >
         <FrameLayout 
              android:id="@+id/cotentview"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
             >
		<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    	android:background="@color/white"
        android:orientation="horizontal"
         >
         <CheckBox
            android:id="@+id/check"
            android:background="@drawable/checkbt"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:button="@null"/>
         <com.lester.headview.CustomImageView
	          android:id="@+id/childhead"
	          android:layout_margin="2dp"
	          android:layout_width="@dimen/middleheadwidth"
	          android:layout_height="@dimen/middleheadheight"
	          android:layout_gravity="center_vertical|center_horizontal"/>
         <LinearLayout 
             android:id="@+id/lllllll"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical"
			android:layout_weight="1"
             >
             <LinearLayout 
                 android:layout_width="wrap_content"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:orientation="horizontal"
                 android:gravity="bottom"
                 android:layout_marginBottom="2dp"
                 >
                 <TextView 
                     android:id="@+id/childname"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/itemtext"
                     android:textSize="@dimen/text_16"
                     android:gravity="center_vertical"
                     />
                 <TextView 
                     android:id="@+id/time"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/itemtext"
                     android:textSize="@dimen/text_16"
                     android:gravity="center_vertical"
                     />
                 <TextView 
                     android:id="@+id/position_status_display"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/itemtext"
                     android:textSize="@dimen/text_16"
                     android:gravity="center_vertical"
                     />
             </LinearLayout>
             <LinearLayout 
                 android:layout_marginTop="2dp"
                 android:layout_width="wrap_content"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:orientation="horizontal"
                 >
                 <TextView 
                     android:id="@+id/address"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/huise"
                     android:textSize="@dimen/text_14"
                     android:gravity="center_vertical"
                     android:maxLines="2"
                     />
             </LinearLayout>
         </LinearLayout>
        <TextView
            android:id="@+id/position_status"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="30dp" 
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:background="@drawable/ischeshang"/>
        </LinearLayout>
       <TextView 
           android:id="@+id/checkbt"
           android:layout_width="80dp"
           android:layout_height="match_parent"
           />
       <ImageView 
           android:id="@+id/hasLeaveRecord"
           android:layout_width="wrap_content"
           android:layout_height="16dp"
           android:src="@drawable/qingjia"
           android:layout_marginLeft="200dp"
           android:layout_marginTop="18dp"
           />
       
       </FrameLayout>
		<TextView
            android:id="@+id/bt"
            android:layout_marginRight="-80dp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/chengse"
            android:text="还原" />
        </LinearLayout>
 </LinearLayout>
