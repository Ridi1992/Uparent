<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topbarheigth"
        android:background="@color/topbar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bartitle"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/toptitle" />

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:text="返回"
            android:textColor="@android:color/white"
            android:background="@drawable/back"
             android:drawableLeft="@drawable/backimg"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/gl_modify_avatar_save"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/back"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </FrameLayout>
    <FrameLayout 
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
         <com.lingwei.materialcalculator.view.CropImageView
        android:id="@+id/gl_modify_avatar_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    	</com.lingwei.materialcalculator.view.CropImageView>
    	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp" 
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        >
        <Button 
            android:id="@+id/gl_modify_avatar_rotate_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gl_rotate_left"
            android:layout_marginRight="1dp"
            android:textSize="14sp"
            android:text="向左旋转"
            />
        <Button 
            android:id="@+id/gl_modify_avatar_rotate_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="@drawable/gl_rotate_left"
             android:textSize="14sp"
            android:text="向右旋转"
            />
    </LinearLayout>
    </FrameLayout>
</LinearLayout>
