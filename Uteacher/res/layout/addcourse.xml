<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:charlie="http://schemas.android.com/apk/res/com.lester.uteacher"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity" >
	 <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topbarheigth"
        android:background="@color/topbar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bartitle"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/toptitle" />

        <TextView
            android:id="@+id/back"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:text="返回"
            android:textColor="@android:color/white"
            android:background="@drawable/back"
             android:drawableLeft="@drawable/backimg"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/selectclass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/back"
            android:textSize="14sp" />
    </FrameLayout>
    <com.teacher.View.VerticalScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="@null"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true" 
			android:focusableInTouchMode="true" 
            android:orientation="vertical"
            >
    <include layout="@layout/couserbar"/>
    
     <FrameLayout
	        android:id="@+id/FLayout"
	        android:layout_weight="1"
		    android:layout_width="fill_parent"
		    android:layout_height="490dp">
	    	<com.teacher.View.ScrollControllViewPager
		        android:id="@+id/vp"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
	        	>
	    	</com.teacher.View.ScrollControllViewPager>
           <LinearLayout
            android:id="@+id/indicator"
            android:layout_gravity="bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal" >
        </LinearLayout>
        </FrameLayout>
       <View 
           android:layout_width="match_parent"
           android:layout_height="1px"
           android:background="@color/backhuise"
           />
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >

        <TextView
            style="@style/myedittextstyle14"
            android:layout_width="wrap_content"
            android:text="本周目标：" />

        <EditText 
            android:id="@+id/aim"
            style="@style/myedittextstyle14"
            android:layout_width="match_parent"
            android:minHeight="40dp"
            />
        </LinearLayout>
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="15dp"
           android:orientation="horizontal"
           >

        <TextView
            style="@style/myedittextstyle14"
            android:layout_width="wrap_content"
            android:text="家长工作：" />

        <EditText 
            android:id="@+id/parentword"
            style="@style/myedittextstyle14"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="40dp"
            />
        </LinearLayout>
         <TextView
            android:id="@+id/send"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/orangebt"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/bttext" />
        </LinearLayout>
        </com.teacher.View.VerticalScrollView>
</LinearLayout>
