<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/dialog_default_style"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_base_title_tv_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="4144444"
            android:textColor="#2C2C2C"
            android:textSize="22sp" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d3d3d3"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_base_text_tv_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="4144444"
            android:textColor="#222222"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d3d3d3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_base_confirm_btn_custom_cancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_bottom_btn_bg"
                android:text="取消"
                android:textColor="#34B8F4"
                android:textSize="22sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#d3d3d3" />

            <Button
                android:id="@+id/dialog_base_confirm_btn_custom_sure"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_bottom_btn_bg"
                android:text="确定"
                android:textColor="#34B8F4"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>